            }
          }
        }
      }
    },
    "ia-intermedio": {
      "name": "IA Intermedio - Certificaci칩n Profesional",
      "description": "Curso avanzado de t칠cnicas de IA",
      "estimatedDuration": "60 horas",
      "lessons": {
        "leccion-1": {
          "name": "Deep Learning Avanzado",
          "description": "Redes neuronales profundas y arquitecturas",
          "estimatedDuration": "5 horas",
          "videos": {
            "deep-learning": {
              "title": "游꿘 Video: Deep Learning",
              "description": "Introducci칩n a redes neuronales profundas",
              "duration": "40 min",
              "filename": "deep-learning-avanzado.mp4",
              "type": "lecture"
            }
          }
        }
      }
    }
  },

  "optimization": {
    "ffmpeg": {
      "preset": "medium",
      "crf": 23,
      "faststart": true,
      "maxConcurrentJobs": 3
    },
    "cdn": {
      "enabled": false,
      "provider": "cloudflare",
      "cacheTtl": "1y"
    },
    "thumbnails": {
      "enabled": true,
      "generateAt": [5, 30, 60],
      "quality": 80,
      "size": "320x180"
    }
  },

  "security": {
    "signedUrls": {
      "enabled": false,
      "expirationHours": 2,
      "description": "URLs firmadas para videos privados"
    },
    "accessControl": {
      "requireAuth": true,
      "checkCourseEnrollment": true,
      "allowPreview": true,
      "previewDuration": 30
    }
  },

  "notifications": {
    "instructorAlerts": {
      "dropoffPatterns": true,
      "lowCompletionRates": true,
      "technicalIssues": true
    },
    "studentReminders": {
      "incompleteLessons": true,
      "newContent": true,
      "weeklyProgress": true
    }
  },

  "reporting": {
    "defaultTimeRange": "7d",
    "availableRanges": ["1d", "7d", "30d", "90d"],
    "autoReports": {
      "enabled": true,
      "frequency": "weekly",
      "recipients": ["instructor", "admin"]
    },
    "exportFormats": ["json", "csv", "pdf"]
  },

  "maintenance": {
    "autoCleanup": {
      "schedule": "0 2 * * 0",
      "tasks": ["temp_files", "old_analytics", "failed_uploads"]
    },
    "healthChecks": {
      "schedule": "0 */6 * * *",
      "checks": ["storage_access", "video_integrity", "database_connections"]
    }
  },

  "development": {
    "debug": {
      "logLevel": "info",
      "trackingLogs": true,
      "performanceLogs": false
    },
    "testing": {
      "mockAnalytics": true,
      "simulateNetworkDelay": false,
      "useLocalStorage": false
    }
  },

  "integration": {
    "mux": {
      "enabled": false,
      "fallback": true,
      "description": "Fallback a Mux para videos existentes"
    },
    "stripe": {
      "enabled": true,
      "trackPurchases": true
    },
    "clerk": {
      "enabled": true,
      "trackUserSessions": true
    }
  },

  "limits": {
    "maxVideosPerCourse": 200,
    "maxVideoSizeGB": 2,
    "maxConcurrentUploads": 5,
    "maxAnalyticsRetentionDays": 365
  },

  "features": {
    "adaptiveStreaming": {
      "enabled": true,
      "status": "production"
    },
    "realTimeAnalytics": {
      "enabled": true,
      "status": "production"
    },
    "autoQualitySelection": {
      "enabled": true,
      "status": "production"
    },
    "dropoffDetection": {
      "enabled": true,
      "status": "production"
    },
    "bulkMigration": {
      "enabled": true,
      "status": "production"
    },
    "storageOptimization": {
      "enabled": true,
      "status": "production"
    }
  },

  "metadata": {
    "version": "2.0.0",
    "lastUpdated": "2025-07-13",
    "authors": ["Pacific Labs Team"],
    "license": "Proprietary",
    "documentation": {
      "setup": "SISTEMA_VIDEOS_GUIA_COMPLETA.md",
      "api": "GCS_IMPLEMENTATION_SUMMARY.md",
      "troubleshooting": "GOOGLE_CLOUD_SETUP.md"
    }
  }
}