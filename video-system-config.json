{
  "version": "2.0.0",
  "name": "Pacific Labs LMS - Advanced Video System",
  "description": "Sistema avanzado de gesti칩n de videos con Google Cloud Storage, analytics en tiempo real y calidad adaptiva",
  
  "videoProcessing": {
    "supportedFormats": ["mp4", "webm", "mov", "avi"],
    "maxFileSize": "500MB",
    "adaptiveQualities": {
      "480p": {
        "resolution": "854x480",
        "bitrate": "1000k",
        "audioBitrate": "128k",
        "description": "Calidad b치sica para conexiones lentas"
      },
      "720p": {
        "resolution": "1280x720", 
        "bitrate": "2500k",
        "audioBitrate": "192k",
        "description": "Calidad est치ndar HD"
      },
      "1080p": {
        "resolution": "1920x1080",
        "bitrate": "5000k", 
        "audioBitrate": "256k",
        "description": "Calidad alta Full HD"
      }
    },
    "autoQualitySelection": {
      "enabled": true,
      "networkSpeedDetection": true,
      "fallbackQuality": "720p"
    }
  },

  "storage": {
    "provider": "google-cloud",
    "bucketStructure": {
      "pattern": "courses/{courseKey}/lessons/{lessonKey}/videos/{videoKey}/{quality}/",
      "publicAccess": true,
      "cacheControl": "public, max-age=31536000",
      "compressionEnabled": true
    },
    "cleanup": {
      "tempFilesRetentionDays": 7,
      "autoCleanupEnabled": true,
      "cleanupSchedule": "0 2 * * *"
    }
  },

  "analytics": {
    "trackingEnabled": true,
    "trackingInterval": 5000,
    "events": {
      "play": { "enabled": true, "priority": "high" },
      "pause": { "enabled": true, "priority": "medium" },
      "seek": { "enabled": true, "priority": "medium" },
      "complete": { "enabled": true, "priority": "high" },
      "quality_change": { "enabled": true, "priority": "low" },
      "speed_change": { "enabled": true, "priority": "low" },
      "progress": { "enabled": true, "priority": "medium", "milestones": [25, 50, 75, 90] }
    },
    "completion": {
      "threshold": 90,
      "autoMarkComplete": true
    },
    "dropoffDetection": {
      "enabled": true,
      "minimumEvents": 10,
      "alertThreshold": 50
    }
  },

