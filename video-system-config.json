      "lessons": {
        "leccion-1": {
          "name": "Fundamentos de IA",
          "description": "Introducci칩n a la Inteligencia Artificial",
          "estimatedDuration": "3 horas",
          "videos": {
            "video-principal": {
              "title": "游꿘 Video: Fundamentos de IA",
              "description": "Conceptos b치sicos y definiciones",
              "duration": "30 min",
              "filename": "fundamentos-ia.mp4",
              "type": "lecture"
            },
            "tesla-caso": {
              "title": "游닀 Estudio de Caso: Tesla",
              "description": "An치lisis del uso de IA en Tesla",
              "duration": "20 min", 
              "filename": "tesla-caso-estudio.mp4",
              "type": "case_study"
            },
            "laboratorio-intro": {
              "title": "游빍 Laboratorio: Google Cloud",
              "description": "Introducci칩n pr치ctica a herramientas de IA",
              "duration": "15 min",
              "filename": "lab-google-cloud.mp4",
              "type": "lab"
            },
            "quiz-explicacion": {
              "title": "游닇 Quiz: Conceptos Fundamentales", 
              "description": "Evaluaci칩n de conocimientos b치sicos",
              "duration": "5 min",
              "filename": "quiz-explicacion.mp4",
              "type": "assessment"
            }
          }
        },
        "leccion-2": {
          "name": "Tipos de Machine Learning",
          "description": "Clasificaci칩n y tipos de aprendizaje autom치tico",
          "estimatedDuration": "4 horas",
          "videos": {
            "ml-tipos": {
              "title": "游꿘 Video: Tipos de ML",
              "description": "Supervisado, no supervisado y por refuerzo",
              "duration": "35 min",
              "filename": "tipos-machine-learning.mp4",
              "type": "lecture"
            },
            "netflix-caso": {
              "title": "游닀 Estudio de Caso: Netflix",
              "description": "Sistema de recomendaciones de Netflix",
