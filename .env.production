# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Configuración optimizada para producción en GKE

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Next.js optimizations
NEXT_TELEMETRY_DISABLED=1
NEXT_SHARP=1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Cloud SQL with Cloud SQL Proxy
DATABASE_URL=mysql://lms_user:changeme_db_password@127.0.0.1:3306/lms_platform

# Read replica for analytics (optional)
DATABASE_READ_URL=mysql://lms_user:changeme_db_password@127.0.0.1:3307/lms_platform

# Connection pooling
DATABASE_CONNECTION_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=60000
DATABASE_QUERY_TIMEOUT=30000

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://:changeme_redis_password@redis-service:6379
REDIS_CONNECTION_POOL_SIZE=10

# ===========================================
# AUTHENTICATION
# ===========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_placeholder
CLERK_SECRET_KEY=sk_test_placeholder

# ===========================================
# PAYMENTS
# ===========================================
STRIPE_API_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_placeholder

# ===========================================
# VIDEO PROCESSING
# ===========================================
MUX_TOKEN_ID=placeholder_token_id
MUX_TOKEN_SECRET=placeholder_token_secret

# ===========================================
# FILE UPLOADS
# ===========================================
UPLOADTHING_SECRET=sk_placeholder
UPLOADTHING_APP_ID=placeholder_app_id

# ===========================================
# GOOGLE CLOUD STORAGE
# ===========================================
GOOGLE_CLOUD_PROJECT_ID=ai-academy-461719
GOOGLE_CLOUD_BUCKET_NAME=lms-platform-videos
GOOGLE_CLOUD_KEY_FILE=/app/credentials/google-cloud-credentials.json

# ===========================================
# APPLICATION URLS
# ===========================================
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# ===========================================
# SECURITY
# ===========================================
# Content Security Policy
CSP_REPORT_URI=https://your-domain.com/api/csp-report
CSP_REPORT_ONLY=false

# CORS
CORS_ORIGIN=https://your-domain.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_PREFLIGHTED_ORIGIN=https://your-domain.com

# ===========================================
# MONITORING AND LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (optional)
SENTRY_DSN=https://placeholder@sentry.io/placeholder

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS=GA_placeholder

# ===========================================
# PERFORMANCE
# ===========================================
# Memory limits
NODE_OPTIONS=--max-old-space-size=1024

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Caching
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# ===========================================
# BUSINESS METRICS
# ===========================================
WEBHOOK_SECRET=webhook_secret_placeholder
INSTRUCTOR_COMMISSION_RATE=0.7

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=placeholder@gmail.com
SMTP_PASS=placeholder_password
SMTP_FROM_EMAIL=noreply@your-domain.com

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_VIDEO_TRANSCODING=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_COURSE_REVIEWS=true

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# ===========================================
# KUBERNETES SPECIFIC
# ===========================================
KUBERNETES_NAMESPACE=lms-platform
KUBERNETES_SERVICE_NAME=lms-platform-service
KUBERNETES_CLUSTER_NAME=lms-cluster

# Health check configuration
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_BUCKET=lms-platform-backups

# ===========================================
# SCALING CONFIGURATION
# ===========================================
MIN_REPLICAS=3
MAX_REPLICAS=20
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

# ===========================================
# COMPLIANCE
# ===========================================
GDPR_ENABLED=true
GDPR_COOKIE_CONSENT=true
GDPR_DATA_RETENTION_DAYS=365

PRIVACY_POLICY_URL=https://your-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-domain.com/terms

# ===========================================
# ANALYTICS AND TRACKING
# ===========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-placeholder
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=placeholder
NEXT_PUBLIC_HOTJAR_ID=placeholder

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/placeholder
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/placeholder
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/placeholder

# ===========================================
# PERFORMANCE MONITORING
# ===========================================
NEW_RELIC_LICENSE_KEY=placeholder_license_key
NEW_RELIC_APP_NAME=LMS-Platform-Production

DD_API_KEY=placeholder_api_key
DD_SERVICE=lms-platform
DD_ENV=production

# ===========================================
# CUSTOM BUSINESS LOGIC
# ===========================================
DEFAULT_COURSE_PRICE=99.99
MINIMUM_COURSE_PRICE=9.99
MAXIMUM_COURSE_PRICE=999.99

MAX_STUDENTS_PER_COURSE=10000
MAX_COURSES_PER_INSTRUCTOR=100

MAX_FILE_SIZE_MB=500
MAX_VIDEO_SIZE_MB=2000
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,jpg,jpeg,png,gif,mp4,webm

# ===========================================
# REGIONAL SETTINGS
# ===========================================
DEFAULT_TIMEZONE=UTC
DEFAULT_LOCALE=en-US
DEFAULT_CURRENCY=USD

SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE,pt-BR
DEFAULT_LANGUAGE=en

# ===========================================
# OPTIMIZATION FLAGS
# ===========================================
NEXT_OPTIMIZE_FONTS=true
NEXT_OPTIMIZE_IMAGES=true
NEXT_OPTIMIZE_CSS=true

ANALYZE_BUNDLE=false
BUNDLE_ANALYZER_PORT=8888

# ===========================================
# DEBUGGING (PRODUCTION)
# ===========================================
DEBUG_MODE=false
VERBOSE_ERRORS=false
STACK_TRACES=false

MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Please try again in a few minutes."
