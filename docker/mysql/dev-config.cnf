# ===========================================
# MYSQL DEVELOPMENT CONFIGURATION
# Configuración optimizada para desarrollo
# ===========================================

[mysqld]
# ===========================================
# CONFIGURACIÓN BÁSICA
# ===========================================

# Server ID y configuración básica
server-id = 1
port = 3306
bind-address = 0.0.0.0

# Configuración de character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
default-time-zone = '+00:00'

# ===========================================
# CONFIGURACIÓN DE MEMORIA (DESARROLLO)
# ===========================================

# InnoDB Buffer Pool (ajustado para desarrollo)
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2

# Query cache
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 2M

# Configuraciones de memoria
sort_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 2M
join_buffer_size = 2M
tmp_table_size = 64M
max_heap_table_size = 64M

# ===========================================
# CONFIGURACIÓN DE CONEXIONES
# ===========================================

max_connections = 200
max_connect_errors = 1000
connect_timeout = 10
wait_timeout = 28800
interactive_timeout = 28800

# Thread cache
thread_cache_size = 16
thread_stack = 256K

# ===========================================
# CONFIGURACIÓN DE LOGS (DESARROLLO)
# ===========================================

# General log para debugging
general_log = 1
general_log_file = /var/log/mysql/general.log

# Slow query log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Error log
log_error = /var/log/mysql/error.log

# Binary log (desactivado en desarrollo)
# log_bin = /var/log/mysql/mysql-bin.log
# binlog_format = ROW
# expire_logs_days = 7

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# SQL Modes seguros
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

# Configuraciones de seguridad
local_infile = 0
secure_file_priv = /var/lib/mysql-files/

# ===========================================
# OPTIMIZACIONES DE DESARROLLO
# ===========================================

# Faster startup
innodb_fast_shutdown = 1
innodb_doublewrite = 0

# Less aggressive flushing
innodb_flush_neighbors = 0
innodb_checksum_algorithm = none

# ===========================================
# CONFIGURACIÓN DE TABLAS
# ===========================================

# MyISAM settings
key_buffer_size = 128M
myisam_sort_buffer_size = 64M

# Table settings
table_open_cache = 400
table_definition_cache = 400

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysqldump]
quick
quote-names
max_allowed_packet = 64M
default-character-set = utf8mb4

[mysqlhotcopy]
interactive-timeout
